{
    "manifest_version": 3,
    "name": "Auto Clear Cookies on Specific Websites",
    "version": "1.0",
    "description": "Automatically clears cookies, including HttpOnly cookies, for specific websites",
    "permissions": [
        "cookies",
        "webNavigation",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "48": "icon.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "48": "icon.png"
    },
    "host_permissions": [
        "*://*/*"
    ]
}